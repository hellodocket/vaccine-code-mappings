{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "patternProperties": {
    "^cpt|cvx": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[0-9-]+": {
          "type": "object",
          "required": [
            "cvx_code",
            "name",
            "description",
            "status",
            "cpt_codes",
            "manufacturers",
            "groups",
            "ndc_codes"
          ],
          "additionalProperties": false,
          "properties": {
            "cvx_code": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "cpt_codes": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "cpt_code": {
                    "type": "string"
                  },
                  "cpt_desc": {
                    "type": "string"
                  }
                },
                "required": ["cpt_code", "cpt_desc"],
                "additionalProperties": false
              }
            },
            "manufacturers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "trade_name": {
                    "type": "string"
                  },
                  "mvx_code": {
                    "type": "string"
                  },
                  "manufacturer": {
                    "type": "string"
                  },
                  "last_updated": {
                    "type": "string"
                  },
                  "product_name_status": {
                    "type": "string"
                  }
                },
                "required": [
                  "trade_name",
                  "mvx_code",
                  "manufacturer",
                  "last_updated",
                  "product_name_status"
                ],
                "additionalProperties": false
              }
            },
            "groups": {
              "type": "object",
              "patternProperties": {
                "^[0-9]+": {
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "active": {
                      "type": "boolean"
                    }
                  },
                  "required": ["name", "active"],
                  "additionalProperties": false
                }
              },
              "minProperties": 1
            },
            "ndc_codes": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "sale_ndc11": {
                    "type": "string"
                  },
                  "use_ndc11": {
                    "type": "string"
                  },
                  "proprietary_name": {
                    "type": "string"
                  },
                  "labeler": {
                    "type": "string"
                  },
                  "mvx_code": {
                    "type": "string"
                  },
                  "start_date": {
                    "type": ["string", "null"]
                  },
                  "end_date": {
                    "type": ["string", "null"]
                  },
                  "sale_gtin": {
                    "type": "string"
                  },
                  "use_gtin": {
                    "type": "string"
                  },
                  "sale_last_updated": {
                    "type": ["string", "null"]
                  },
                  "use_last_updated": {
                    "type": ["string", "null"]
                  }
                },
                "required": [
                  "sale_ndc11",
                  "use_ndc11",
                  "proprietary_name",
                  "labeler",
                  "mvx_code",
                  "start_date",
                  "end_date",
                  "sale_gtin",
                  "use_gtin",
                  "sale_last_updated",
                  "use_last_updated"
                ],
                "additionalProperties": false
              }
            }
          }
        }
      }
    }
  },
  "required": ["cpt", "cvx"]
}
